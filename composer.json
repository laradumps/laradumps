{
    "name": "laradumps/laradumps",
    "description": "A Dump Component for Laravel.",
    "homepage": "https://github.com/laradumps/laradumps",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Luan Freitas",
            "email": "luanfreitas10@protonmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "nunomaduro/termwind": "^1.12"
    },
    "require-dev": {
        "illuminate/support": "^8.18 | ^9.0",
        "orchestra/testbench": "^6.17 | ^7.0",
        "symfony/var-dumper": "^5.4 | ^6.0",
        "nunomaduro/larastan": "^1.0 | ^2.1",
        "friendsofphp/php-cs-fixer": "^3.8",
        "pestphp/pest": "^1.21"
    },
    "autoload": {
        "psr-4": {
            "LaraDumps\\LaraDumps\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "LaraDumps\\LaraDumps\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "./vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "test:lint": "./vendor/bin/php-cs-fixer fix --dry-run --allow-risky=yes",
        "test:types": "./vendor/bin/phpstan analyse",
        "test:unit": "./vendor/bin/pest --order-by random",
        "verify": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaraDumps\\LaraDumps\\LaraDumpsServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}