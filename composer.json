{
    "name": "laradumps/laradumps",
    "description": "A Dump Component for Laravel.",
    "homepage": "https://github.com/laradumps/laradumps",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Luan Freitas",
            "email": "luanfreitas10@protonmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "nunomaduro/termwind": "^1.15.1|^2.0.1",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/mail": "^10.0|^11.0",
        "laradumps/laradumps-core": "^2.2"
    },
    "require-dev": {
        "orchestra/testbench-core": "^8.0|^9.4",
        "laravel/framework": "^10.0|^11.21",
        "symfony/var-dumper": "^6.4.0|^7.1.3",
        "pestphp/pest": "^3.2.5",
        "laravel/pint": "^1.17.2",
        "larastan/larastan": "^2.9.8",
        "mockery/mockery": "^1.6.12",
        "livewire/livewire": "^3.5.6"
    },
    "autoload": {
        "psr-4": {
            "LaraDumps\\LaraDumps\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "LaraDumps\\LaraDumps\\Tests\\" : "tests"
        }
    },
    "scripts": {
        "test:pint": "./vendor/bin/pint --test",
        "pint:fix": "./vendor/bin/pint",
        "test:types": "./vendor/bin/phpstan analyse --ansi --memory-limit=-1",
        "test:tests": "./vendor/bin/pest --order-by random",
        "verify": [
            "@cs-fixer",
            "@test:types",
            "@test:tests"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaraDumps\\LaraDumps\\LaraDumpsServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
